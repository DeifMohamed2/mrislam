const boxes = document.querySelectorAll(".box-right")

window.addEventListener("scroll",checkbox)
checkbox ( )
function checkbox ( ){
  const trigger = window.innerHeight/5*4;
  boxes.forEach(box=>{
      const boxTop = box.getBoundingClientRect().top;
      if (boxTop<trigger) {
          box.classList.add("show")
      }
  })
}

